@model PTPageViewModel

@{
}

<h1>Welcome PT!</h1>

<form asp-controller="PT" asp-action="SubmitCustomerAddition">
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.CustomerEmail)
            @Html.TextBoxFor(m => m.CustomerEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CustomerEmail, null, new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </fieldset>

</form>



<h3>Clients:</h3>

@foreach (var customer in Model.PersonalTrainer.Customers)
{
    @Html.ActionLink(customer.FirstName+" "+customer.LastName, "PTndex", "Dashboard", new { userId = customer.Id }, new { @class = "btn btn-secondary" })

}
