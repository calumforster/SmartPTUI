@{

    if (this.User.IsInRole("APPUSERROLE"))
    {
        Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    }
    else if (this.User.IsInRole("SMARTPTUIADMINROLE"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (this.User.IsInRole("SMARTPTUIPTROLE"))
    {
        Layout = "~/Views/Shared/_LayoutPT.cshtml";
    }

    else if (this.User.IsInRole("SMARTPTUIADMINROLETEST"))
    {
        Layout = "~/Views/Shared/_LayoutPTTest.cshtml";
    }

    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="~/css/GlobalStyling.css" />
<script type="text/javascript" src="~/js/Validation.js"></script>


