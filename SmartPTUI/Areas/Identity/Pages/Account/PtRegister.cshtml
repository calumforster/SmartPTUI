@page
@model PtRegisterModel
@using SmartPTUI.Data.Enums
@{
    ViewData["Title"] = "PT Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @Html.ValidationMessage("CustomerNotFoundError")
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <select asp-for="Input.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                    <option selected="selected" value="">Please select a Gender</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.DOB"></label>
                <input asp-for="Input.DOB" class="form-control" />
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.CustomerEmail"></label>
                <input asp-for="Input.CustomerEmail" class="form-control" />
                <span asp-validation-for="Input.CustomerEmail" class="text-danger"></span>
            </div>

            @{
                var colourPickerUrl = "https://www.w3schools.com/colors/colors_picker.asp";
            }
            <p>Use the colour picker below to select a hex colour code to style your site (Represented with: "#XXXXXX")</p>
            <a href="@colourPickerUrl">Colour Picker</a>
            <br>
            <br>
            <div class="form-group">
                <label asp-for="Input.TitleColour"></label>
                <input asp-for="Input.TitleColour" class="form-control" />
                <span asp-validation-for="Input.TitleColour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.TextColour"></label>
                <input asp-for="Input.TextColour" class="form-control" />
                <span asp-validation-for="Input.TextColour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.BackgroundColour"></label>
                <input asp-for="Input.BackgroundColour" class="form-control" />
                <span asp-validation-for="Input.BackgroundColour" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.TopBarColour"></label>
                <input asp-for="Input.TopBarColour" class="form-control" />
                <span asp-validation-for="Input.TopBarColour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.SiteName"></label>
                <input asp-for="Input.SiteName" class="form-control" />
                <span asp-validation-for="Input.SiteName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.WelcomeMessage"></label>
                <input asp-for="Input.WelcomeMessage" class="form-control" />
                <span asp-validation-for="Input.WelcomeMessage" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
